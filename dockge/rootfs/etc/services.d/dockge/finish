#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Add-on: Dockge
# Take down the S6 supervision tree when Dockge fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
    bashio::log.warning "Dockge crashed with exit code ${1}. Respawning..."
fi
