#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Add-on: Arcane Docker Manager
# Take down the S6 supervision tree when Arcane fails
# ==============================================================================
if [[ "${1}" -ne 0 ]] && [[ "${1}" -ne 256 ]]; then
    bashio::log.warning "Arcane crashed with exit code ${1}. Respawning..."
fi
